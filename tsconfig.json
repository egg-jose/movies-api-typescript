{
  "compilerOptions": {
      "experimentalDecorators": true,
      "target": "es6",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "lib",
      "noEmitOnError": false,
      "typeRoots": [
          "../node_modules/@types/"
      ],
      "suppressImplicitAnyIndexErrors": false,
      "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}